---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* ============================================
     VARIABLES CSS - COULEURS DE L'ÉQUIPE
     London Albion City FC
     ============================================ */
  :root {
    /* Couleurs officielles de l'équipe */
    --team-navy: #082340;    /* Bleu marine - titres, texte principal */
    --team-red: #d01925;     /* Rouge - accents, liens, boutons */
    --team-brown: #9c7647;   /* Marron - texte secondaire, détails */
    --team-beige: #fef6ce;   /* Beige - fonds, hero */
    
    /* Anciennes refs conservées pour compatibilité */
    --dark-navy: #082340;
    --primary-blue: #238AD2;
    --light-blue: #9ECBE8;
    --steel-blue: #426186;
    --soft-blue: #719EC0;
    --white: #FFFFFF;
    
    /* Couleurs fonctionnelles (couleurs équipe) - tout le corps de texte en bleu marine */
    --text-primary: var(--team-navy);
    --text-secondary: var(--team-navy);
    --bg-primary: var(--white);
    --bg-secondary: var(--team-beige);
    --accent: var(--team-red);
    --shadow: var(--team-navy);
    
    /* Espacements */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 3rem;
    --spacing-xl: 4rem;
    
    /* Typographie */
    --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 2rem;
    --font-size-4xl: 2.5rem;
    --font-size-5xl: 3.5rem;
    
    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-base: 0.3s ease;
    --transition-slow: 0.5s ease;
  }

  /* ============================================
     RESET & BASE
     ============================================ */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    font-size: 16px;
  }

  body {
    font-family: var(--font-family);
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--text-primary);
    background-color: var(--bg-primary);
    overflow-x: hidden;
  }

  /* ============================================
     CONTAINER
     ============================================ */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 var(--spacing-sm);
    }
  }

  /* ============================================
     NAVIGATION
     ============================================ */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 10px rgba(2, 52, 106, 0.1);
    z-index: 1000;
    transition: var(--transition-base);
  }

  .navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-sm);
    padding-bottom: var(--spacing-sm);
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    text-decoration: none;
    transition: var(--transition-base);
    color: inherit;
  }

  .nav-brand:hover {
    opacity: 0.8;
    text-decoration: none;
  }

  .nav-brand:hover .brand-text {
    color: var(--text-primary);
  }

  .logo-image {
    width: 50px;
    height: 50px;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(8, 35, 64, 0.25);
  }

  .logo {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, var(--team-red), var(--team-brown));
    color: var(--white);
    font-weight: bold;
    font-size: var(--font-size-xl);
    border-radius: 50%;
    box-shadow: 0 4px 15px rgba(8, 35, 64, 0.25);
  }

  .brand-text {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
    transition: var(--transition-base);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
    transition: var(--transition-base);
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 80%;
    height: 2px;
    background-color: var(--team-red);
    transition: var(--transition-base);
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--team-red);
  }

  .nav-link.active::after,
  .nav-link:hover::after {
    transform: translateX(-50%) scaleX(1);
  }

  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-xs);
  }

  .menu-toggle span {
    width: 25px;
    height: 3px;
    background-color: var(--text-primary);
    border-radius: 2px;
    transition: var(--transition-base);
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      top: 70px;
      left: 0;
      right: 0;
      background-color: var(--white);
      flex-direction: column;
      padding: var(--spacing-md);
      box-shadow: 0 4px 20px rgba(2, 52, 106, 0.1);
      transform: translateX(-100%);
      transition: var(--transition-base);
      gap: var(--spacing-sm);
    }
    
    .nav-menu.active {
      transform: translateX(0);
    }
  }

  /* ============================================
     HERO SECTION
     ============================================ */
  .hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--team-beige) 0%, var(--team-brown) 30%, var(--team-navy) 100%);
    margin-top: 70px;
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
    z-index: 0;
  }

  .hero-image-bottom {
    object-position: bottom center;
    object-fit: cover;
    height: 120%;
    width: 100%;
    top: auto;
    bottom: 0;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(158, 203, 232, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(35, 138, 210, 0.2) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: var(--white);
    padding: var(--spacing-xl) 0;
  }

  .hero-title {
    font-size: var(--font-size-5xl);
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    text-shadow: 0 4px 20px rgba(2, 52, 106, 0.3);
    line-height: 1.2;
    animation: fadeInUp 0.8s ease;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    font-weight: 300;
    opacity: 0.95;
    animation: fadeInUp 0.8s ease 0.2s both;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--font-size-3xl);
    }
    
    .hero-subtitle {
      font-size: var(--font-size-lg);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ============================================
     MAIN CONTENT
     ============================================ */
  .main-content {
    padding: var(--spacing-xl) 0;
  }

  .content-section {
    margin-bottom: var(--spacing-xl);
    animation: fadeIn 0.6s ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .section-title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    position: relative;
    padding-bottom: var(--spacing-sm);
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, var(--team-red), var(--team-brown));
    border-radius: 2px;
  }

  .section-content {
    max-width: 800px;
    font-size: var(--font-size-lg);
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .section-content p {
    margin-bottom: var(--spacing-md);
  }

  .lead-text {
    font-size: var(--font-size-xl);
    font-weight: 500;
    color: var(--text-primary);
    line-height: 1.7;
  }

  .emphasis-text {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
    font-style: italic;
    margin-top: var(--spacing-md);
    line-height: 1.7;
  }

  .feature-list {
    list-style: none;
    margin: var(--spacing-md) 0;
    padding-left: 0;
  }

  .feature-list li {
    position: relative;
    padding-left: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .feature-list li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: var(--team-red);
    font-weight: bold;
    font-size: var(--font-size-xl);
  }

  .divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--light-blue), transparent);
    margin: var(--spacing-xl) 0;
  }

  /* Images dans le contenu */
  .content-image {
    width: 100%;
    max-width: 800px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(2, 52, 106, 0.15);
    margin: var(--spacing-md) 0;
    object-fit: cover;
  }

  .image-container {
    display: flex;
    justify-content: center;
    margin: var(--spacing-md) 0;
  }

  /* Mise en page avec image à gauche */
  .content-with-image {
    display: flex;
    gap: var(--spacing-md);
    align-items: flex-start;
    margin-top: var(--spacing-md);
  }

  .content-image-left {
    flex-shrink: 0;
    display: flex;
    align-items: flex-start;
  }

  .small-content-image {
    width: 300px;
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(2, 52, 106, 0.15);
    object-fit: cover;
  }

  .section-content-right {
    flex: 1;
    max-width: 800px;
    font-size: var(--font-size-lg);
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .section-content-right p {
    margin-bottom: var(--spacing-md);
  }

  .section-title-right {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    position: relative;
    padding-bottom: var(--spacing-sm);
  }

  .section-title-right::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, var(--team-red), var(--team-brown));
    border-radius: 2px;
  }

  /* Mise en page avec image à droite */
  .content-with-image-reverse {
    display: flex;
    gap: var(--spacing-md);
    align-items: flex-start;
    margin-top: var(--spacing-md);
  }

  .section-content-left {
    flex: 1;
    max-width: 800px;
    font-size: var(--font-size-lg);
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .section-content-left p {
    margin-bottom: var(--spacing-md);
  }

  .section-title-left {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    position: relative;
    padding-bottom: var(--spacing-sm);
  }

  .section-title-left::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, var(--team-red), var(--team-brown));
    border-radius: 2px;
  }

  .content-image-right {
    flex-shrink: 0;
    display: flex;
    align-items: flex-start;
  }

  @media (max-width: 768px) {
    .content-with-image {
      flex-direction: column;
    }

    .content-with-image-reverse {
      flex-direction: column;
    }

    .small-content-image {
      width: 100%;
      max-width: 400px;
      margin: 0 auto var(--spacing-md);
    }

    .section-title-right {
      font-size: var(--font-size-2xl);
    }

    .section-title-left {
      font-size: var(--font-size-2xl);
    }
  }

  .image-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
    margin: var(--spacing-md) 0;
  }

  .image-grid img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(2, 52, 106, 0.1);
    transition: var(--transition-base);
  }

  .image-grid img:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(2, 52, 106, 0.2);
  }

  /* ============================================
     CTA SECTION
     ============================================ */
  .cta-section {
    background: linear-gradient(135deg, var(--team-red), var(--team-brown));
    padding: var(--spacing-xl) 0;
    margin-top: var(--spacing-xl);
    text-align: center;
  }

  .cta-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: var(--white);
    margin-bottom: var(--spacing-md);
    text-shadow: 0 2px 10px rgba(8, 35, 64, 0.3);
  }

  .cta-text {
    font-size: var(--font-size-xl);
    color: var(--white);
    opacity: 0.95;
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }

  .cta-button {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-xl);
    background-color: var(--white);
    color: var(--team-red);
    font-size: var(--font-size-lg);
    font-weight: 600;
    text-decoration: none;
    border-radius: 50px;
    transition: var(--transition-base);
    box-shadow: 0 4px 15px rgba(8, 35, 64, 0.3);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(208, 25, 37, 0.4);
    background-color: var(--team-beige);
  }

  .cta-button:active {
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .cta-title {
      font-size: var(--font-size-3xl);
    }

    .cta-text {
      font-size: var(--font-size-lg);
    }

    .cta-button {
      padding: var(--spacing-sm) var(--spacing-lg);
      font-size: var(--font-size-base);
    }
  }

  /* ============================================
     FOOTER
     ============================================ */
  .footer {
    background: linear-gradient(135deg, var(--team-navy), var(--team-brown));
    color: var(--white);
    padding: var(--spacing-lg) 0;
    text-align: center;
    margin-top: 0;
  }

  .footer p {
    opacity: 0.9;
    font-size: var(--font-size-base);
  }

  /* ============================================
     ANIMATIONS & INTERACTIONS
     ============================================ */
  @media (prefers-reduced-motion: no-preference) {
    .content-section {
      animation: fadeInUp 0.6s ease;
    }
  }

  /* Smooth scroll */
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
    
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* ============================================
     UTILITAIRES
     ============================================ */
  @media (max-width: 768px) {
    .section-title {
      font-size: var(--font-size-2xl);
    }
    
    .section-content {
      font-size: var(--font-size-base);
    }
    
    .lead-text {
      font-size: var(--font-size-lg);
    }
    
    .emphasis-text {
      font-size: var(--font-size-lg);
    }
  }
</style>
