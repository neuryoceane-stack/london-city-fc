---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="London Albion City FC - Contact"
  description="Contactez London Albion City Football Club - Nous sommes à votre écoute"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="hero">
    <img src="/images/Cage ciel.jpeg" alt="Contact London Albion City FC" class="hero-image" loading="eager" />
    <div class="hero-overlay"></div>
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Contact Us</h1>
        <p class="hero-subtitle">Get in touch with London Albion City FC</p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main class="main-content">
    <section class="content-section">
      <div class="container">
        <div class="contact-wrapper">
          <div class="contact-info">
            <h2 class="section-title">Contact</h2>
            <div class="section-content">
              <div class="contact-details">
                <div class="contact-item">
                  <h3>Commercial & Sponsorship</h3>
                  <p class="contact-role">Riccardo Botticella — Commercial & Sponsorship Director</p>
                  <p class="contact-email"><a href="mailto:riccardobotticella@londoncityfc.com">riccardobotticella@londoncityfc.com</a></p>
                  <p class="contact-desc">For partnership opportunities, sponsorship agreements and commercial collaborations.</p>
                </div>
                <div class="contact-divider"></div>
                <div class="contact-item">
                  <h3>Media & Social Collaborations</h3>
                  <p class="contact-role">Lorenzo Coppello — Head of Media & Digital Strategy</p>
                  <p class="contact-email"><a href="mailto:lorenzocoppello@londoncityfc.com">lorenzocoppello@londoncityfc.com</a></p>
                  <p class="contact-desc">For media enquiries, content collaborations, influencer partnerships and social initiatives.</p>
                </div>
                <div class="contact-divider"></div>
                <div class="contact-item">
                  <h3>General Enquiries</h3>
                  <p class="contact-role">Gregorio Desario — Operations & Administration</p>
                  <p class="contact-email"><a href="mailto:gregoriodesario@londoncityfc.com">gregoriodesario@londoncityfc.com</a></p>
                  <p class="contact-desc">For general questions, club information and other enquiries.</p>
                </div>
                <div class="contact-item">
                  <h3>Follow Us</h3>
                  <p>Stay connected on social media</p>
                  <div class="social-links">
                    <a href="https://www.linkedin.com/company/london-city-fc" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="social-link">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    </a>
                    <a href="https://www.instagram.com/londoncityfc" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="social-link">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    </a>
                    <a href="https://www.youtube.com/@londoncityfc" target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="social-link">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="contact-form-container">
            <h2 class="section-title">Send us a Message</h2>
            <form class="contact-form" id="contact-form">
              <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" name="name" required />
              </div>

              <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required />
              </div>

              <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" />
              </div>

              <div class="form-group">
                <label for="message">Message *</label>
                <textarea id="message" name="message" rows="6" required></textarea>
              </div>

              <button type="submit" class="submit-button">Send Message</button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    margin-top: var(--spacing-md);
  }

  .contact-info {
    max-width: 100%;
  }

  .contact-details {
    margin-top: var(--spacing-lg);
  }

  .contact-item {
    margin-bottom: var(--spacing-md);
  }

  .contact-item h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--team-red);
    margin-bottom: var(--spacing-xs);
  }

  .contact-item p {
    color: var(--text-secondary);
    font-size: var(--font-size-base);
  }

  .contact-role {
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .contact-email {
    margin-bottom: var(--spacing-xs);
  }

  .contact-email a {
    color: var(--team-red);
    text-decoration: none;
    font-weight: 500;
  }

  .contact-email a:hover {
    text-decoration: underline;
  }

  .contact-desc {
    margin-top: var(--spacing-xs);
    font-size: var(--font-size-base);
  }

  .contact-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--team-brown), transparent);
    margin: var(--spacing-md) 0;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--team-red), var(--team-brown));
    color: var(--white);
    border-radius: 50%;
    transition: var(--transition-base);
    text-decoration: none;
  }

  .social-link:hover {
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 6px 20px rgba(35, 138, 210, 0.4);
    background: linear-gradient(135deg, var(--team-brown), var(--team-red));
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  .contact-form-container {
    max-width: 100%;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group label {
    font-weight: 500;
    color: var(--text-primary);
    font-size: var(--font-size-base);
  }

  .form-group input,
  .form-group textarea {
    padding: var(--spacing-sm);
    border: 2px solid var(--light-blue);
    border-radius: 8px;
    font-size: var(--font-size-base);
    font-family: var(--font-family);
    color: var(--text-primary);
    background-color: var(--white);
    transition: var(--transition-base);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--team-red);
    box-shadow: 0 0 0 3px rgba(208, 25, 37, 0.15);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    padding: var(--spacing-sm) var(--spacing-md);
    background: linear-gradient(135deg, var(--team-red), var(--team-brown));
    color: var(--white);
    border: none;
    border-radius: 8px;
    font-size: var(--font-size-lg);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition-base);
    margin-top: var(--spacing-sm);
  }

  .submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(35, 138, 210, 0.3);
  }

  .submit-button:active {
    transform: translateY(0);
  }

  @media (max-width: 968px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form');
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Récupérer les valeurs du formulaire
      const formData = new FormData(form);
      const data = Object.fromEntries(formData);
      
      // Ici vous pouvez ajouter la logique pour envoyer l'email
      // Pour l'instant, on affiche juste une alerte
      alert('Thank you for your message! We will get back to you soon.\n\n' + 
            'Name: ' + data.name + '\n' +
            'Email: ' + data.email + '\n' +
            'Subject: ' + data.subject + '\n' +
            'Message: ' + data.message);
      
      // Réinitialiser le formulaire
      form.reset();
    });
  }
</script>
